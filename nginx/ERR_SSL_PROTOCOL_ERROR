server{


          listen    443 ssl;

                  server_name    网站域名;

                          ssl_certificate   SSL证书;

                                  ssl_certificate_key    SSL证书私钥;

                                          ssl_ciphers    加密算法;

                                                  ssl_protocols    加密协议;

                                                          ssl_prefer_server_ciphers    on;

}


}
